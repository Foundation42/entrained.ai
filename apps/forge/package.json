{
  "name": "@entrained/forge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run build:runtime && wrangler dev",
    "build": "bun run build:runtime && wrangler deploy --dry-run --outdir=dist",
    "build:runtime": "bun run scripts/build-runtime.ts",
    "deploy": "bun run build:runtime && wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply forge-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply forge-db"
  },
  "dependencies": {
    "@cloudflare/containers": "^0.0.31",
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "typescript": "^5.3.3",
    "wrangler": "^4.56.0"
  }
}
